# ===========================================
# TwelveLabs API Configuration
# ===========================================
TL_API_KEY=your_twelvelabs_api_key
TL_VIDEO_ID=your_video_id
TL_INDEX_ID=your_index_id

# ===========================================
# Google Gemini API
# ===========================================
GEMINI_API_KEY=your_gemini_api_key

# ===========================================
# Text-to-Speech Provider
# Choose either "polly" (AWS) or "elevenlabs"
# ===========================================
TTS_PROVIDER=polly

# ===========================================
# AWS Polly Configuration (if using Polly)
# ===========================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=eu-west-1
POLLY_VOICE_ID=Joanna

# ===========================================
# ElevenLabs Configuration (if using ElevenLabs)
# ===========================================
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_voice_id

# ===========================================
# Video Paths
# ===========================================
VIDEO_PATH=./house-tour.mp4
OUTPUT_PATH=./house_tour_pegasus_cut.mp4

# ===========================================
# Optional: Font Path for ffmpeg overlays
# ===========================================
FONT_PATH=/usr/share/fonts/truetype/dejavu/DejaVuSans-Bold.ttf

# ===========================================
# Optional: Parallelization Settings
# ===========================================
MAX_JOBS=4
MAX_ANN_JOBS=40

# ===========================================
# Backend Server Configuration
# ===========================================
PORT=3001
SESSION_SECRET=your-session-secret-change-in-production
SCRIPT_PATH=../scripts/script.sh
INSIGHTS_SCRIPT_PATH=../scripts/insights.sh
UPLOADS_DIR=./uploads
OUTPUTS_DIR=./outputs

# ===========================================
# Frontend Configuration (optional)
# ===========================================
VITE_API_BASE_URL=/api
